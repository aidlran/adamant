{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended-type-checked",
    "plugin:@typescript-eslint/stylistic-type-checked",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "ignorePatterns": ["dist"],
  "rules": {
    "no-console": "error",
    "no-debugger": "error"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "rules": {
        "@typescript-eslint/no-floating-promises": "off"
      }
    }
  ]
}
